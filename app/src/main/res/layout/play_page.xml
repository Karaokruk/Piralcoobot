<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:background="@color/piratePrimary"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/pirateListScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="PossiblyUselessParentWithBackground">

            <LinearLayout
                android:id="@+id/pirateList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="7dp">

                <EditText
                    android:id="@+id/PirateName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pirateSecondary"
                    android:padding="5dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Pirate"
                    android:textColor="@color/buttonTextColor"
                    android:textSize="25sp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <EditText
                    android:id="@+id/PirateName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pirateSecondary"
                    android:padding="5dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Pirate"
                    android:textColor="@color/buttonTextColor"
                    android:textSize="25sp"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/moussePrimary"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:background="@color/guestPrimary"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1" >

    </LinearLayout>

</LinearLayout>